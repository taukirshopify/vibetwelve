<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  </style>
 
 
 
 <!--==============================
    Cat Area
============================== -->
<div class="">
    <div class="">
        <div class="row gx-0">
       
            {% for block in section.blocks %}
            {% assign variable = forloop.index + 1 %}
    
            <div class="col-md-6 wow fadeInUp" data-wow-delay="0.{{ variable }}s">
                <div class="product-cat">
                    <a href="#" class="img">
                        {{ block.settings.img | image_url: width: 955 | image_tag:
                           
                            height: height,
                            sizes: "100vw",
                            widths: '250, 375, 400,800 ,850, 955'
                          }}
                    </a>
                    <a href="{{ block.settings.btn_url }}" class="ot-btn">{{ block.settings.btn }}</a>
                </div>
            </div>
        {% endfor %}

        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Featued Benner",
        "class": "FeatuedBenner",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 0
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 0
              }
        ],
        "blocks": [
            {
                "type": "Benner",
                "name": "Benner",
                "settings": [

                    {
                        "type": "text",
                        "id": "btn",
                        "label": "Button Title",
                        "default": "Discover",
                
                        "placeholder": "Discover"
                    },
                    {
                        "type": "url",
                        "id": "btn_url",
                        "label": "Connect to the page"
                    },
                    {
                        "type": "image_picker",
                        "id": "img",
                        "label": "Featured Image"
                    }
                ]
            }
        ]
        ,
        "presets": [
            {
              "name": "Featued Benner"
            }
            ]
    }
{% endschema %}