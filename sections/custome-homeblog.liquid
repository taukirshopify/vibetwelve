<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  </style>
 
 
 


    <!--==============================
    Blog Area
============================== -->
<div class="space-extra-bottom section-{{ section.id }}-padding">
    <div class="container">
        <div class="row gy-4">
              
            {% assign blogAnimation = 1 %}

            


        {% assign blogs = blogs[section.settings.home_blog] %}
        
        {% for article in blogs.articles %}

            <div class="col-md-6 wow fadeInUp" data-wow-delay="0.{% increment my_counter %}s">
                <div class="blog-card">
                    <a href="{{ article.url }}" class="blog-img">
                        {{ article | image_url: width: 650 | image_tag:
                           
                            height: height,
                            widths: '250, 375, 400,650'
                          }}
                    </a>
                    <div class="blog-content">
               
                    
                        {% for tag in article.tags %}
                            {% unless forloop.first %} <a href="{{ article.url }}" class="category"> {{ tag }}</a>{% endunless %}
                            {% endfor %}
                    
                    
                  
                        <h3 class="blog-title"><a href="blog-details.html">{{ article.title }}</a></h3>
                        <p class="blog-text">{{ article.content | truncatewords: 15 }}</p>
                    </div>
                </div>
            </div>

           {% endfor %}

        </div>
    </div>
</div>



{% schema %}
    {
        "name": "Blog",
        "class": "blog",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 0
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 0
              },
              {
				"type": "blog",
				"id": "home_blog",
				"label": "select your blog"
			}	
        ],
        "presets": [
            {
				"name": "blog"
            }
            ]
    }
{% endschema %}