<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  {% comment %} .ot-product .price{
   margin:0;
  } {% endcomment %}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
    <!--==============================
    Featured Area
============================== -->
<div class="section-{{ section.id }}-padding">
  <div class="container">
      <div class="splide" id="product-slidertwo">
          <div class="splide__track">
              <div class="splide__list">

                {% assign collection = collections[section.settings.collection] %}
                {% for product in collection.products limit: section.settings.p_limit %}
                  {% assign sold_out = true %}
                  {% if product.available %}
                  {% assign sold_out = false %}
                  {% endif %}


                  <div class="splide__slide">
                    {% include 'product-grid-item' %}


                    </div>




                {% endfor %}



              </div>
          </div>
      </div>
  </div>
</div>



{% schema %}
    {
        "name": "Featued Product two",
        "class": "product01",
        "settings": [
          {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 0
          },
          {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 0
          },
         {
            "type": "collection",
            "id": "collection",
            "label": "Select your Collection"
         },
         {
          "type": "text",
          "id": "p_limit",
          "label": "Product Limite",
          "placeholder": "5"
         }
        ],
        "presets": [
            {
              "name": "Featued Product two"
            }
            ]
    }
{% endschema %}


<script>
  document.addEventListener('DOMContentLoaded', function () {
  var pssplide = new Splide( '#product-slidertwo', {
    type: 'loop',
    perPage: 4,
    perMove: 1,
    arrows: false,
    autoplay:false,
    speed:500,
    pagination: false,
    gap: 0,
    autoScroll: {
      speed: 0.5,
    },
    grid: {
      rows: 2,
      gap : {
        row: '1rem',
      },
    },
    breakpoints: {
      1199: {
        perPage: 3,
        grid: {
          rows: 2,
          gap : {
            row: '1rem',
          }
        }
      },
      992: {
        perPage: 2,
        grid: {
          rows: 2,
          gap : {
            row: '1rem',
          }
        }
      },
      767: {
        perPage: 2,
        grid: {
          rows: 2,
          gap : {
            row: '1rem',
          }
        }
      },
      560: {
        perPage: 2,
        grid: {
          rows: 2,
          gap : {
            row: '1rem',
          }
        }
      },
    }
  } );
  pssplide.mount(window.splide.Extensionstwo);
});

</script>

