{% if section.blocks.size > 1 %}
    <div class="block-marquee">
        <marquee-text
          class="marquee-scrolling__list items"
          scrolling-speed="10">
            {% for block in section.blocks %}
                {% if block.settings.title != blank %}
                    <span class="item">
                        <p class="bold text-base">
                            {{ block.settings.text_first }}
                        </p>
                        <span class="shape-circle shape--sm"></span>
                    </span>
                {% endif %}
            {% endfor %}
        </marquee-text>
    </div>
{% endif %}

{% schema %}
  {
    "name": "Marquee",
    "settings": [
        {
            "type": "header",
            "content": "Styles"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
        },
        {
            "type": "color",
            "id": "border_color",
            "label": "Border color",
            "default": "#FFFFFF"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Text",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Text"
                }
            ]
        }
    ],
    "presets": [
      {
        "category": "text",
        "name": "Marquee",
        "settings": {}
      }
    ]
  }
{% endschema %}